<div class="container mt-4">
  <div class="card">
    <div class="card-body">
      <h2><%= @student.name %></h2>
      <p><strong>Email:</strong> <%= @student.email %></p>
      <p><strong>Phone:</strong> <%= @student.phone %></p>
      <p><strong>Course:</strong> <%= @student.course %></p>
      <p><strong>Year:</strong> <%= @student.year %></p>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to "Back to Students", students_path, class: "btn btn-secondary" %>
    <%= button_to "Delete", student_path(@student), method: :delete, form: { data: { turbo_confirm: "Are you sure?" }, style: "display: inline-block;" }, class: "btn btn-danger ms-2" %>
  </div>
</div>

