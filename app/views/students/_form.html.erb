<%= simple_form_for @student do |f| %>
  <% if @student.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h4>
      <ul>
        <% @student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6"><%= f.input :name, input_html: { class: "form-control" } %></div>
    <div class="col-md-6"><%= f.input :email, input_html: { class: "form-control" } %></div>
    <div class="col-md-6"><%= f.input :phone, input_html: { class: "form-control" } %></div>
    <div class="col-md-6"><%= f.input :course, input_html: { class: "form-control" } %></div>
    <div class="col-md-6"><%= f.input :year, input_html: { class: "form-control" } %></div>
  </div>

  <div class="mt-3">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
